[RunInEditor]
class ModelColorModulate : ZilchComponent
{
    [Property]
    var Color : Real4 = Real4(0,0,0,1);
    
    [Property]
    var MaterialToClone : Material = Material.WhiteMaterial;
    
    function Initialize(init : CogInitializer)
    {
        this.Recolor();
    }
    
    function Recolor() {
        var mat : Material = this.MaterialToClone.RuntimeClone() as Material;
        mat.ColorDiffuse.DiffuseColor = this.Color;
        this.Owner.Model.Material = mat;
    }
}
